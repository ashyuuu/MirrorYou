import tkinter as tk

def show_weather():
    label.config(text="Weather option selected")
    show_submenu("Weather")

def show_gallery():
    label.config(text="Gallery option selected")

def perform_analysis():
    label.config(text="Analysis option selected")

def do_nothing():
    label.config(text="Blank option selected")

def show_submenu(option):
    # Clear the existing buttons
    clear_buttons()

    # Create a label for the submenu
    submenu_label = tk.Label(root, text=option, font=("Helvetica", 14))
    submenu_label.pack(pady=20)

    # Create a back button
    back_button = tk.Button(root, text="Back", command=show_main_menu)
    back_button.pack(pady=10)

def show_main_menu():
    # Clear the existing labels and buttons
    clear_labels()
    clear_buttons()

    # Recreate the main menu
    create_main_menu()

def clear_labels():
    for widget in root.winfo_children():
        if isinstance(widget, tk.Label):
            widget.destroy()

def clear_buttons():
    for widget in root.winfo_children():
        if isinstance(widget, tk.Button):
            widget.destroy()

        buttons_frame.destroy()

def create_main_menu():
    # Create a label in the middle
    global label
    label = tk.Label(root, text="How may I help you today?", font=("Helvetica", 20))
    label.pack(pady=20)

    # Create buttons with different functions and evenly spread them out
    global buttons_frame
    buttons_frame = tk.Frame(root)
    buttons_frame.pack()

    weather_button = tk.Button(buttons_frame, text="Weather", command=show_weather)
    weather_button.pack(side="left", padx=10)

    gallery_button = tk.Button(buttons_frame, text="Photo Gallery & Analysis", command=show_gallery)
    gallery_button.pack(side="left", padx=10)

    analysis_button = tk.Button(buttons_frame, text="Take a picture", command=perform_analysis)
    analysis_button.pack(side="left", padx=10)

    blank_button = tk.Button(buttons_frame, text="Mirror", command=do_nothing)
    blank_button.pack(side="left", padx=10)

# Create the main window
root = tk.Tk()
root.title("MirrorYou")

# Set the size of the main window
root.geometry("2000x2000")

# Create the main menu
create_main_menu()

# Start the GUI
root.mainloop()
